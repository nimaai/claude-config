{
  "alwaysThinkingEnabled": true,

  "permissions": {
    "deny": [
      "Read(**/.env.*)",
      "Read(**/.env)",
      "Read(**/.git/**)",
      "Read(**/.transcrypt_key.txt.asc)",
      "Read(**/build/**)",
      "Read(**/dist/**)",
      "Read(**/encrypt-transcrypt-key)",
      "Read(**/master_secret.txt)",
      "Read(**/node_modules/**)",
      "Read(**/secrets/**)",
      "Read(**/zhdk_secrets.yml)",
      "Read(**/test_claude_permission.txt)",
      "Read(**/transcrypt)"
    ]
  },

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'cmd=$(jq -r \".tool_input.command\"); if [[ \"$cmd\" =~ bin/rspec ]] && git diff --name-only | grep -q \"\\.(clj|cljc)$\"; then ~/.claude/scripts/reload-backend-test.sh; fi'",
            "timeout": 120
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'file=$(jq -r \".tool_input.file_path\"); if [[ \"$file\" =~ \\.(clj|cljc)$ ]]; then ~/.claude/scripts/reload-backend.sh && sleep 2 && ~/.claude/scripts/capture-backend.sh 30; fi'",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
